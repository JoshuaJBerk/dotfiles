###########################
#  Configuration
###########################

# enable UTF-8
set -g utf8
setw -g utf8 on

# intuitive mouse usage (e.g. copy mode)
setw -g mode-mouse on
set -g mouse-select-pane on
set -g mouse-resize-pane on
set -g mouse-select-window on

# start window numbers at 1 to match keyboard order with tmux window order
setw -g pane-base-index 1
set -g base-index 1

# automatic window numbering/naming
set -g renumber-windows on
set -g automatic-rename

# highlight window when it has new activity
setw -g monitor-activity on
set -g visual-activity on

# increase scrollback lines
set -g history-limit 10000

# No escape time for vi mode
set -sg escape-time 0

# Ring the bell if any background window rang a bell
set -g bell-action any

# ZSH as the default shell
set -g default-shell $SHELL

###########################
#  Key Bindings
###########################

# prefix to Control-a (like GNU screen)
unbind C-b
unbind l
set -g prefix C-Space
bind Space send-prefix
bind C-Space last-window

# quick view of processes
bind '~' split-window "exec htop"

# Keep your finger on ctrl, or don't
bind ^D detach-client

# splitting/resizing panes
bind | split-window -h
bind - split-window -v
bind J resize-pane -D
bind K resize-pane -U
bind H resize-pane -L
bind L resize-pane -R

# act like vim
setw -g mode-keys vi
set -g status-keys vi
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R
bind -r C-h select-window -t :-
bind -r C-l select-window -t :+
bind -t vi-copy 'v' begin-selection
bind -t vi-copy 'y' copy-selection

# easily toggle synchronization (mnemonic: e is for echo)
# sends input to all panes in a given window.
bind e setw synchronize-panes on
bind E setw synchronize-panes off

##########################
# Colors & Statusline
##########################

# improve colors
set -g default-terminal 'screen-256color'
set -g terminal-overrides 'xterm:colors=256'
set -g status-attr default
set -g status-bg default
set -g status-fg default
set -g message-bg default
set -g message-fg default
set -g message-attr bold
set -g pane-border-fg default
set -g pane-active-border-fg default
setw -g window-status-fg default
setw -g window-status-bg default
setw -g window-status-attr dim
setw -g window-status-current-fg default
setw -g window-status-current-bg default
setw -g window-status-current-attr bright

# scheme (styled as powerline)
set -g status-left-length 50
set -g status-left '#[fg=default,bold] #S #I:#P #[fg=colour252,bg=default,nobold]#[fg=colour245,bg=colour238,bold] #(whoami) #[fg=colour238,bg=default,nobold]'
set -g status-right ''
set -g window-status-format "#[fg=colour235,bg=colour252,bold] #I #W "
set -g wind ow-status-current-format "#[fg=colour234,bg=colour39]#[fg=black,bg=colour39,noreverse,bold] #I: #W #[fg=colour39,bg=colour234,nobold]"
