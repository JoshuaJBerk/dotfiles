#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest on OSX.
export ZSH=$HOME/.dotfiles

# Initiate OS X Software Update
softwareupdate --install --all 2>&1

# Update Git Submodules
cd $ZSH
git submodule foreach git pull origin master 2> /dev/null
cd -

# Custom System Software
$ZSH/script/install

# Set OS X defaults
$ZSH/osx/set-defaults.sh 2>&1
